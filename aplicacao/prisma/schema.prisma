generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id      Int      @id @default(autoincrement())
  nome    String
  email   String   @unique
  tarefas Tabela[] 
}

model Tabela {
  id            Int        @id @default(autoincrement())
  titulo        String
  descricao     String
  status        Status     @default(A_FAZER)
  setor         String
  prioridade    Prioridade
  criadoEm      DateTime   @default(now())
  fechaEm       DateTime?

  usuarioId     Int        
  usuario       Usuario    @relation(fields: [usuarioId], references: [id])
}

enum Prioridade {
  BAIXA
  MEDIA
  ALTA
}

enum Status {
  A_FAZER
  FAZENDO
  PRONTO
}
